                on_press: root.on_forum_click()
            Button:
                text: "My Profile"
                size_hint: (0.5, 0.25)
                pos_hint:{'x': .5, 'y': .5}
                background_color: (7 / 255, 113 / 255, 135 / 255, 1)
                # on_press: root.on_myprofile_click()

        Label:
            text: "Forum"
            text_size: self.size
            halign: 'center'
            valign: 'middle'

            font_size: "20dp"
            size_hint: None, None
            width: "250dp"
            height: "50dp"
            font_size: "30dp"
            pos_hint: {"center_x": 0.5}
            color: 7/255, 113/255, 135/255
            
            background_color: (158/255, 206/255, 154/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        
        TextInput:
            hint_text: "Orasul tau..."
            id: oras
            multiline: False
            size_hint: None, None
            width: "250dp"
            height: "25dp"
            pos_hint: {"center_x": 0.5}
            background_color: (228/255, 197/255, 175/255, 1)
            color: (113 / 255, 165 / 255, 127 / 255, 1)
        
        TextInput:
